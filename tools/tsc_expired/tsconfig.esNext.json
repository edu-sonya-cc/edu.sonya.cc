{
  "compilerOptions": {
    "target": "EsNext",
    "module": "EsNext",
    "lib": ["EsNext", "dom", "dom.iterable", "scripthost"],
    "outDir": "../jsTscEsNext/",
    "rootDir": "./ts/",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "ts/*.ts",
    "ts/actualPage/*.ts",
    "ts/bricks/*.ts",
    "ts/data/*.ts"
  ],
  "exclude": ["node_modules"]
}
